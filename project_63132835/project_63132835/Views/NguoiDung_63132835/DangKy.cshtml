@model project_63132835.Models.KhachHang

@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/NguoiDungLayout.cshtml";
}
<link href="~/Content/NguoiDungCssLayout/cssDangNhap.css" rel="stylesheet" />

<style>
    #btnSubmit {
        height: 30px;
        width: 80px;
    }

    #dangnhap {
        display: flex;
    }

    .flash {
        display: none;
    }

    #divMenuTrai {
        display: none;
    }

    #slider2 {
        display: none;
    }

    #chudesach {
        display: none;
    }

    #phiaduoi {
        display: none;
    }
    .bo {
        display: none;
    }
</style>
        

<div class="wrapper">
    <form action="/NguoiDung_63132835/DangKy" method="post">
        @Html.AntiForgeryToken()
        <h1>
            Đăng Ký
        </h1>
        <p>@ViewBag.thongBao</p>
        <div class="input-box">
            <input type="text" placeholder="Họ và tên" name="txtHoVaTen"
                   required>
        </div>

        <div class="input-box">
            <input type="text" placeholder="Tài Khoản" name="txtTaiKhoan"
                   required>
        </div>

        <div class="input-box">
            <input type="text" placeholder="Mật khẩu" name="txtMatKhau"
                   required>
        </div>
        <div class="input-box">
            <input type="text" placeholder="Nhập lại mật khẩu" name="txtNhapLaiMatKhau"
                   required>
        </div>

        <button type="submit" class="btn" name="btnSubmit">Xác nhận</button>
        <div class="register-link">
            <p> <a href="/NguoiDung_63132835/DangNhap">Quay lại đăng nhập</a></p>
        </div>
    </form>
</div>



