
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/NguoiDungLayout.cshtml";
}
<link href="~/Content/NguoiDungCssLayout/cssDangNhap.css" rel="stylesheet" />
<link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

<style>
    #btnSubmit {
        height: 30px;
        width: 80px;
    }

    #dangnhap {
        display: flex;
    }

    .flash {
        display: none;
    }

    #divMenuTrai {
        display: none;
    }

    #slider2 {
        display: none;
    }

    #chudesach {
        display: none;
    }

    #phiaduoi {
        display: none;
    }
    .bo {
        display: none;
    }
</style>

<div class="wrapper">
    <form action="/NguoiDung_63132835/DangNhap" method="post">
        <h3>@ViewBag.ThongBao</h3>
        <h1>
            Login
        </h1>
        <div class="input-box">
            <input type="text" placeholder="Username" name="txtTaikhoan" autofocus
                   required>
            <i class='bx bxs-user-circle'></i>
        </div>
        <div class="input-box">
            <input type="text" placeholder="Password" name="txtMatKhau"
                   required>
            <i class='bx bxs-lock-alt'></i>
        </div>

        <div class="remember-forgot">
            <p><a href="/NguoiDung_63132835/DoiMatKhau">Change password</a></p>
        </div>

        <button type="submit" class="btn" name="btnSubmit">Login</button>
        <div class="register-link">
            <p>Dont have an account? <a href="/NguoiDung_63132835/DangKy">Register</a></p>
        </div>

    </form>
</div>



