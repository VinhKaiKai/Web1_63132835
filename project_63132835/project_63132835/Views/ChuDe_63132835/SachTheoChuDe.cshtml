@using project_63132835.Models;
@model List<Sach>
<link href="~/Content/NguoiDungCssLayout/TrangChuCss.css" rel="stylesheet" />
@{
    ViewBag.Title = "SachTheoChuDe";
    Layout = "~/Views/Shared/NguoiDungLayout.cshtml";

}
@if (Model.Count == 0)
{
    <h1>Không có cuốn sách nào thuộc chủ đề</h1>
    <h2>@ViewBag.Sach</h2>
}


@{ int i = 0;}
@foreach (var item in Model)
{
    i++;
    <div id="SanPham">
        <a href="@Url.Action("XemChiTiet","Sach_63132835",new {@MaSach=item.MaSach})">
        <div id="AnhBia">
            <img src="@Url.Content("~/HinhAnhSP/"+item.AnhBia)" width="100%" height="100%" />
        </div>
        <div id="TenSach">
            @item.TenSach
        </div>
        <div id="GiaTien">
            <span>Giá bán:</span>
            <span id="vinh3">
                @item.GiaBan
            </span>
            <span>Đồng</span>
        </div>
    </div>
    if (i % 3 == 0)
    {
        <div style="clear:both"></div>
    }

}
