@using project_63132835.Models;
@model List<Sach>
<h1 class="item-header">Sách Mới</h1>
@*đưa sách từ cơ sở dữ liệu lên sách mới*@
@{ foreach (var item in Model)

    {
        @*Lấy mã sách từ index qua trang chi tiết*@
        <div class="activity-list-update">
            <img src="@Url.Content("~/HinhAnhSP/"+item.AnhBia)" width="50" height="65" alt="Image">

            @if(item.TenSach.Length >20)
                {
                    <p><strong title="@item.TenSach">Tiêu đề:@item.TenSach.Substring(0,20)...</strong><br /><a href="@Url.Action("XemChiTiet",new {@masach=item.MaSach})">Xem chi tiết</a></p>
                }
             else
                {
                    <p><strong title="@item.TenSach">Tiêu đề:@item.TenSach</strong><br /><a href="@Url.Action("XemChiTiet",new {@masach=item.MaSach})">Xem chi tiết</a></p>
                }
           
            <div class="clear"></div>
        </div>
    }
}


<a href="#" class="item-footer green">
    Sách Loại mới nhất
</a>